<%= link_to "[ < go back ]", portfolios_path %>

<h1> Your Dashboard </h1>

<h4> Your Investments: <%= @initial_invest %> € </h4>
<h4> Current value: <%= @current_value %> € </h4>
<h4> Performance: <%= @performance_in_percent %> % , <%= @performance_in_eur %> € </h4>
<h4> Investments: </h4>

  <ul>
    <% names = [] %>
    <% @assets.each do |asset| %>
    <% names << asset.asset_name %>
      <% end %>
          <% names.uniq.each do |name| %>
          <li> <%=  name %> </li>
        <% end %>
  </ul>

<h4> Industries: </h4>

    <% current_industry_value = 0 %>
    <% @assets.uniq.each do |asset| %>
      <% asset.acquisitions.each do |acquisition| %>
        <% asset.industry.name %>
      <% end %>
    <% end %>

  <ul>
    <% @industries.each do |industry| %>
        <li> <%= industry.name.capitalize %> </li>
      <% end %>
  </ul>

<h4> Asset categories: </h4>

  <ul>
  <% categories = [] %>
   <% @assets.each do |asset| %>
      <% categories << asset.asset_category %>
      <% end %>
        <% categories.uniq.each do |category| %>
          <li> <%=  category.capitalize %> </li>
        <% end %>
  </ul>
