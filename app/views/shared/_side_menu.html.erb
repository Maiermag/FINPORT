<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" id="close_button" onclick="closeNav()">&times;</a>
  <%= link_to 'Dashboard', dashboard_path %>
  <% current_user.portfolios.each do |portfolio| %>
    <%= link_to "#{portfolio.institution.name}", portfolio_path(portfolio) %>
  <% end %>
  <%= link_to 'Add a new institution', institutions_path %>
</div>

<!-- Use any element to open the sidenav -->
<span id="open_button"><i class="fas fa-bars"></i></span>

