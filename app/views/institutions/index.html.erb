<div class="containertry">
  <h1 class="manage" id="connectionsheader"> Manage Connections </h1>


  <h3>Connect to a new financial institution</h3>

  <% @institutions.each do |institution| %>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      <%= institution.name %> 

    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div>
              <% @portfolio = Portfolio.find_by(institution: institution, user_id: nil) %>
              <% @total_portfolio_value = @portfolio.total_current_portfolio_value %>
              total portfolio value: <%= @total_portfolio_value %>

            </div>
            <%= simple_form_for Portfolio.new, :html=> { class: 'inputinstitutions' } do |f| %>
              <%= f.hidden_field :institution_id, value: institution.id %>
              <%= f.submit "Add Connection", class: 'confirmbuttonpurple'%>
            <% end %>
          </div>
          <div class="modal-footer">
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>

  



